@page
@model doctor.Pages.PacientPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pacient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pacient.Id" />
            <div class="form-group">
                <label asp-for="Pacient.Name" class="control-label"></label>
                <input asp-for="Pacient.Name" class="form-control" />
                <span asp-validation-for="Pacient.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pacient.Mname" class="control-label"></label>
                <input asp-for="Pacient.Mname" class="form-control" />
                <span asp-validation-for="Pacient.Mname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pacient.Age" class="control-label"></label>
                <input asp-for="Pacient.Age" class="form-control" />
                <span asp-validation-for="Pacient.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pacient.Birthday" class="control-label"></label>
                <input asp-for="Pacient.Birthday" class="form-control" />
                <span asp-validation-for="Pacient.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pacient.DoctorId" class="control-label"></label>
                <select asp-for="Pacient.DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                <span asp-validation-for="Pacient.DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
